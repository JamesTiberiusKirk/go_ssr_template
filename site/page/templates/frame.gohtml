  <body>

    <!-- making data accessible in js -->
    <script>
    </script>

    <h1>Go SSR Boilerplate</h1>
    PAGE: {{ .meta.MenuID }}

    <div id="page_content">
      {{template "content" .}}
    </div>

    <script>

      let elems = {
        H1: "h1",
        H2: "h2",
        H3: "h3",
        H4: "h4",
        H5: "h5",
        H6: "h6",
        H7: "h7",
        DIV: "div",
        P: "p",
      
      }


      if (!String.prototype.format) {
        String.prototype.format = function(...args) {
          return this.replace(/(\{\d+\})/g, function(a) {
            return args[+(a.substr(1, a.length - 2)) || 0];
          });
        };
      }

      function elem(elem, inner, attribs){
        return '<{0} {1} >{2}</{0}>'.format(elem, attribs, inner)
      }

      let _data = {{.data}}
      let _meta = {{.meta}}

      console.log("DATA: ", _data)
      console.log("META: ", _meta)

      contentDiv = document.getElementById("ssr_example")
      if (typeof(contentDiv) !== 'undefined' && typeof(render) !== 'undefined') {
        contentDiv.innerHTML = render(contentDiv, _data)
      }
    </script>
  </body>
</html>
